{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "./dist/",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "**/js/sketches/*",
        "**/js/tests/*"
    ],
    // "include": [
    //     "src/**/*",
    //     "sketches/**/*"
    // ]
}