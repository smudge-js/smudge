{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "./dist/",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "types": [
        "THREE"
    ],
    "exclude": [
        "node_modules",
        "./src/js/sketches/**/*",
        "./src/js/tests/**/*",
        "notes/**/*",
        "obsolete_sketches/**/*"
    ],
    // "include": [
    //     "src/**/*",
    //     "sketches/**/*"
    // ]
}